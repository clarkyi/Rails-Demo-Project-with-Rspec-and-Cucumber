- title "Tweets"

%table
  %tr
    %th User
    %th Text
  - for tweet in @tweets
    %tr
      %td= tweet.user_id
      %td= tweet.text
      %td= link_to 'Show', tweet
      %td= link_to 'Edit', edit_tweet_path(tweet)
      %td= link_to 'Destroy', tweet, :confirm => 'Are you sure?', :method => :delete

%p= link_to "New Tweet", new_tweet_path(tweet)
